{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "out",
        "dist",
        "src/webview"
    ]
}